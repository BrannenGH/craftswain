{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Restore",
      "type": "shell",
      "command": "yarn"
    },
    {
      "label": "Build Craftswain",
      "type": "shell",
      "problemMatcher": [
        "$tsc"
      ],
      "command": "yarn tsc",
      "options": {
        "cwd": "craftswain"
      },
      "group": {
        "kind": "build",
      },
      "dependsOn": [ "Restore" ]
    },
    {
      "label": "Build Craftswain Selenium",
      "type": "shell",
      "problemMatcher": [
        "$tsc"
      ],
      "command": "yarn tsc",
      "options": {
        "cwd": "craftswain-selenium"
      },
      "group": {
        "kind": "build",
      },
      "dependsOn": [ "Restore" ]
    },
    {
      "label": "Demo Test Suite",
      "type": "shell",
      "options": {
        "cwd": "./craftswain-selenium"
      },
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "dependsOn": [ "Build Craftswain", "Build Craftswain Selenium"]
    },
  ]
}
