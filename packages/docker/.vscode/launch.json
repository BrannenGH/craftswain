{
  "version": "1.0.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Jest: current unit test file",
      "env": { "DEBUG": "*" },
      "runtimeExecutable": "yarn",
      "runtimeArgs": ["run", "--inspect-brk", "jest"],
      "args": ["${fileBasenameNoExtension}"],
      "console": "internalConsole",
      "preLaunchTask": "build"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Jest: current e2e file",
      "env": { "DEBUG": "*" },
      "runtimeExecutable": "yarn",
      "runtimeArgs": ["run", "--inspect-brk", "jest"],
      "args": ["${fileBasenameNoExtension}", "--config", "e2e/jest.config.js"],
      "console": "internalConsole",
      "preLaunchTask": "build"
    }
  ]
}
