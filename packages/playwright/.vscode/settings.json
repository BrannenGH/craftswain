// Why does VSCode not hide the .js.map files
{
  "eslint.packageManager": "yarn",
  "search.exclude": {
    "**/.yarn": true,
    "**/.pnp.*": true
  },
  "npm.packageManager": "yarn",
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/*?.js": {"when": "$(basename).ts"},
    "**/*.js.map": {"when": "$(basename).ts"},
  },
  "explorer.fileNesting.enabled": false,
  "explorer.fileNesting.expand": false,
}
